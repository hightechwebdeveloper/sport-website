@using reCAPTCHA.MVC
@model MTDB.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}

<div class="container w-xxl w-auto-xs">
    <a class="navbar-brand block m-t"><img src="~/content/images/mtdb_logo_black.png"></a>
    <div class="m-b-lg">
        <div class="wrapper text-center">
            <strong>Change your password.</strong>
        </div>
        @using (Html.BeginForm("ChangePassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="list-group list-group-sm">
                <div class="list-group-item">
                    @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Current Password", @class = "form-control no-border" })
                </div>
                <div class="list-group-item">
                    @Html.PasswordFor(m => m.NewPassword, new { placeholder = "New Password", @class = "form-control no-border" })
                </div>
                <div class="list-group-item">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control no-border" })
                </div>
                <div class="list-group-item">
                    @Html.Recaptcha()
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Change</button>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
