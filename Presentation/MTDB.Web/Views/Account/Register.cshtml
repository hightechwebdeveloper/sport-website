@using reCAPTCHA.MVC
@model MTDB.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container w-xxl w-auto-xs">
    <a href class="navbar-brand block m-t"><img src="~/content/images/mtdb_logo_black.png"></a>
    <div class="m-b-lg">
        <div class="wrapper text-center">
            <strong>Welcome to the MTDB Beta site, we've upgraded the entire site!  Register here for beta features!</strong>
        </div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger wrapper text-center" })
            <div class="list-group list-group-sm">
                <div class="list-group-item">
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Name", @class = "form-control no-border" })
                </div>
                <div class="list-group-item">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control no-border" })
                </div>
                <div class="list-group-item">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control no-border" })
                </div>
                <div class="list-group-item">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control no-border" })
                </div>
                <div class="list-group-item">
                  @Html.Recaptcha()
                </div>
            </div>
            <div class="checkbox m-b-md m-t-none">
                <label class="i-checks">
                    <input type="checkbox" required><i></i> Agree the <a href="@Url.Action("Legal", "Misc")">terms and policy</a>

                </label>
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Sign up</button>
            <div class="line line-dashed"></div>
            <p class="text-center">
                <small>Already have an account?</small>
            </p>
            @Html.ActionLink("Sign in", "Login", "Account", new { @class = "btn btn-lg btn-default btn-block" })
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
