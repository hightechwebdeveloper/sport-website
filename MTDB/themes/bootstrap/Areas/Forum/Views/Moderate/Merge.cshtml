@model mvcForum.Web.ViewModels.MergeViewModel
@using mvcForum.Web.Helpers;
@{
    ViewBag.Title = ForumHelper.GetString("Moderate.Title", new { Name = Model.Forum.Name });

	Layout = Url.GetThemeBaseUrl() + "areas/forum/views/shared/forumlayout.cshtml";
}
<!-- Views/Moderate/Merge.cshtml -->
	<span class="pull-right muted">@ForumHelper.GetString("CurrentTime", new object[] { DateTime.UtcNow })</span>

	<h2>@ForumHelper.GetString("Merge.Heading")</h2>
	<hr />

	<div class="row">
		<div class="col-md-12">
			@using (Html.BeginForm("merge", "moderate", FormMethod.Post, new { @class = "form-horizontal" })) {
	   foreach (Int32 id in Model.Topics.Select(t => t.Id)) {
				<input type="hidden" name="topics" value="@id" />
	   }
				<div class="form-group">
					<label class="col-lg-2 control-label" for="Delete">@ForumHelper.GetString("Merge.Confirm", null, "mvcForum.Web")</label>
					<div class="col-lg-10">
						<input type="checkbox" id="Delete" name="confirm" value="true" />
					</div>
				</div>
				<div class="form-group">
					<div class="col-lg-10 col-lg-offset-2">
						<ul class="list-unstyled">
@foreach (var topic in Model.Topics) {
							<li>@topic.Title</li>
}
						</ul>
					</div>
				</div>
				<div class="form-group">
					<div class="col-lg-offset-2 col-lg-10">
						<button type="submit" class="btn btn-primary">@ForumHelper.GetString("Merge.Submit")</button>
					</div>
				</div>
			}
		</div>
	</div>

@if (ForumHelper.Debug) {
<!-- For Selenium Test -->
<div id="forum_moderate_merge" style="display: none;"></div>
}